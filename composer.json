{
    "name": "mattonit/mercury",
    "description": "Mercury web framework",
    "type": "project",
    "require": {
        "php": "^7.3",
        "vlucas/phpdotenv": "^5.2@dev",
        "twig/twig": "^3.0"
    },
    "license": "MIT",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "System\\": "app/system/"
        }
    },
    "scripts": {
        "post-install-cmd": "@php -r \"file_exists('.env') || copy('.env.sample', '.env');\""
    }
}
